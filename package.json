        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-simple-import-sort": "^12.1.0",
        "eslint-plugin-vue": "^9.26.0",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "typescript": "^5.4.5"
    }
}